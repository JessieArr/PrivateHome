@page
@model PrivateHome.Extensions.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Extension.ExtensionName</h1>

<a class="btn btn-info" asp-page="/Extensions/Edit" asp-route-id="@Model.Extension.ID">Edit</a>
@if (Model.CompilerErrors.Count == 0)
{
    @Html.Raw(@Model.Summary)
}
else
{
    <h3>Compiler Errors occurred:</h3>
    @foreach (var error in Model.CompilerErrors)
    {
        <p>@error</p>
    }
}
